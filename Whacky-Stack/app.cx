var WIDTH  i32 = 590
var HEIGHT i32 = 960

var ScreenSizeInPixels Vec2I
var I32_MAX            i32 = 2147483647
var TAU                f32

var Colors []Color3

// modes 
// 		FIXME to consts, when they exist in CX 

