var DIR_LEFT  i32 = 0
var DIR_RIGHT i32 = 1
var DIR_DOWN  i32 = 2
var DIR_UP    i32 = 3

var NumRoomsAcross i32 = 4
var RoomSpan f32 = 2.0 / i32.f32(NumRoomsAcross)
var Rooms [4][4]Room // FIXME: use constants when we can 
var locs  []app.Vec2 // used/carved-out locations of the Rooms grid 

type Room struct {
	Active bool // inactive == unused, blank space 
	
	// insets (from room bounds) 
	/*Top    f32
	Right  f32
	Bottom f32
	Left   f32*/
	
	// connections 
	Exits     []i32
	Possibles []i32 // could be moved to "Exits" 
}



