func addNode() () {
	len := 0.6
	thE := 0.2
	lX  := currX - thE
	rX  := currX + thE

	PathX       = []f32.append(PathX,       currX)
	PathY       = []f32.append(PathY,       currY)
	LeftX       = []f32.append(PathX,       lX)
	LeftY       = []f32.append(PathY,       currY)
	RightX      = []f32.append(PathX,       rX)
	RightY      = []f32.append(PathY,       currY)
	Aim         = []f32.append(Aim,         0.0)
	Length      = []f32.append(Length,      len)
	ThickExtent = []f32.append(ThickExtent, thE)

	if /* not root node */ currNodeId != 0 {
		blah := 2
	}

	prevX      = currX
	prevY      = currY
	prevLength = len
